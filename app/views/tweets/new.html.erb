<% if @tweet.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
    <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @tweet , url:{action: :create} do |f| %>
    <p><%= f.label :message, 'いまどうしてる?' %></p>
    <%= f.text_area :message , size: "80x10"%>
    <p><%= f.label :tdate, '日付'  %></p>
    <% Time.current %>
    <%= f.datetime_field :tdate ,id:"datetime_field"%>
    <%= f.submit 'ツイートする' %>

<% end %>
  
